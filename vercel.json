{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "redirects": [
    {
      "source": "/sign-in",
      "destination": "/signup",
      "permanent": true
    },
    {
      "source": "/sign-up",
      "destination": "/signup",
      "permanent": true
    },
    {
      "source": "/signin",
      "destination": "/signup",
      "permanent": true
    },
    {
      "source": "/premium",
      "destination": "/signup",
      "permanent": true
    },
    {
      "source": "/calculators/(.*)",
      "destination": "/signup",
      "permanent": true
    },
    {
      "source": "/dashboard",
      "destination": "/signup",
      "permanent": true
    }
  ],
  "routes": [
    {
      "src": "^/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "^/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ],
  "rewrites": [
    {
      "source": "^/(.*)",
      "destination": "/index.html"
    }
  ]
}
